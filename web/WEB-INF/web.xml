        <servlet-class>com.smileBlog.collection.servlet.AjaxAddOrDelectCollectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjaxCollectionServlet</servlet-name>
        <url-pattern>/AjaxCollectionServlet</url-pattern>
