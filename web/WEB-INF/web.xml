    <!--编码过滤-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.smileBlog.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

