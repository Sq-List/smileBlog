    <!--编码过滤-->
    <filter>
        <filter-name>EncdoingFilter</filter-name>
        <filter-class>com.smileBlog.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncdoingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

